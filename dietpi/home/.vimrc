"syntax on
"colorscheme desert
set title
set shell=bash
set background=dark
set undolevels=100
set history=100
set fileformat=unix
set ff=unix
set nocompatible
set showmode                  " display mode
set showcmd                   " display command
set number                    " line numbers
set autoread                  " watch for file changes
set showmatch                 " show matching bracket
set ruler                     " show the line number on the bar
set hlsearch                  " highlight the search
set cmdheight=2               " command line two lines high
set more                      " use more prompt
set autoindent smartindent    " auto/smart indent
set nowrap                    " no line wrap
set mouse-=a                  " selecting text with mouse without entering VISUAL mode
set tabstop=4                 " width of a TAB is set to 4
set shiftwidth=4              " indents will have a width of 4
set softtabstop=4             " number of columns for a TAB
set expandtab                 " convert TABs to spaces
set smarttab                  " tab and backspace are smart
set noerrorbells              " No error bells
set ls=2                      " show a status line
set t_Co=256                  " 256 colors
